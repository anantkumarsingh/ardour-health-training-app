<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        tools:cardCornerRadius="20dp"
        android:layout_width="250dp"
        android:layout_height="320dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/doc_name_apppt"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                >

                <ImageView
                    android:id="@+id/doc_image_appt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/person_vector"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/doc_name_apppt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Name"
                android:layout_above="@+id/doc_specialty_appt"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                />


            <TextView
                android:id="@+id/doc_specialty_appt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doc Specialist"
                android:layout_above="@+id/book_appt"
                android:layout_marginBottom="5dp"
                android:textColor="@color/grey"
                android:layout_marginLeft="20dp"
                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/book_appt"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/khaki"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Book"
                android:textColor="@color/black"
                app:cornerRadius="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                >

            </com.google.android.material.button.MaterialButton>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>