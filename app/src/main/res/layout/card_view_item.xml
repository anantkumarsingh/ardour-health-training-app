<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  >

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        tools:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Ana Grewal"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="35dp" />



            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/ic_baseline_account_circle_24"
                app:shapeAppearanceOverlay="@style/Circular"
                android:layout_alignParentStart="true"
                android:layout_width="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_height="50dp"/>


            <TextView
                android:id="@+id/doc_specialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dental Specialist"
                android:textColor="@color/grey"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="55dp"
                />


            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true"
                tools:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/doc_specialty"
                card_view:cardBackgroundColor="@color/white_purple">

                <TextView
                    android:id="@+id/date_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Monday, Aug 15"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    />

                <TextView
                    android:id="@+id/time_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  11:00 AM - 12:00 PM"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="25dp"
                    />

            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF263F"
                android:layout_alignParentBottom="true"
                android:text="Cancel"
                android:textColor="@color/black"
                app:cornerRadius="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                >

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/khaki"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Reschedule"
                android:textColor="@color/black"
                app:cornerRadius="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                >

            </com.google.android.material.button.MaterialButton>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>