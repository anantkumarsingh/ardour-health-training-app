<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".activities.DietActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:text="Track Your \nDaily Nutritions"
            android:fontFamily="@font/bebas_nue_reg"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="italic" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="Nutrition Intake"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


                <androidx.cardview.widget.CardView
                    android:layout_below="@id/text_4"
                    android:id="@+id/calorie_tracker_card"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/calorie_intake_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/baijamjureebold"
                            android:text="530/2500 Cal"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:textSize="30sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:text="Consumed Today"
                            android:fontFamily="@font/baijamjureebold"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            android:layout_below="@+id/calorie_intake_user"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="50"
                            android:max="100"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/custom_progress_bar"/>



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>




            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/text_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="40dp"
                            android:text="Weight (Kg)"
                            android:fontFamily="@font/playfair_display"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_7"
                            android:fontFamily="@font/bal_jamburee_reg"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="15dp"
                            android:text="70"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progressBar_protein"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:indeterminate="false"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:progressDrawable="@drawable/circular_progress_bar"
                            android:background="@drawable/circle_shape"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="100"
                            android:progress="65" />


                        <TextView
                            android:id="@+id/text_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="50dp"
                            android:text="Protein"
                            android:fontFamily="@font/playfair_display"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_8"
                            android:layout_marginLeft="80dp"
                            android:fontFamily="@font/bebas_nue_reg"
                            android:layout_marginTop="5dp"
                            android:text="108 Cal"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="200dp"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progressBar_carbs"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:indeterminate="false"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:progressDrawable="@drawable/circular_progress_bar"
                            android:background="@drawable/circle_shape"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="100"
                            android:progress="65" />


                        <TextView
                            android:id="@+id/text_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="50dp"
                            android:text="Carbs"
                            android:fontFamily="@font/playfair_display"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_9"
                            android:layout_marginLeft="80dp"
                            android:fontFamily="@font/bal_jamburee_reg"
                            android:layout_marginTop="5dp"
                            android:text="108 Cal"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="200dp"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progressBar_fats"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:indeterminate="false"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:progressDrawable="@drawable/circular_progress_bar"
                            android:background="@drawable/circle_shape"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="100"
                            android:progress="65" />


                        <TextView
                            android:id="@+id/text_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="50dp"
                            android:text="Fats"
                            android:fontFamily="@font/playfair_display"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_10"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="5dp"
                            android:text="108 Cal"
                            android:fontFamily="@font/bal_jamburee_reg"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_meal_card"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/neon_green"
                    xmlns:card_view="http://schemas.android.com/tools"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="10dp"

                    card_view:cardCornerRAdius="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="+ Add Meal"
                        android:fontFamily="@font/bal_jamburee_reg"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        >

                    </TextView>


                </androidx.cardview.widget.CardView>




            </RelativeLayout>



            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/text_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="Water Intake"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bal_jamburee_reg"
                    android:textSize="20sp" />


                <androidx.cardview.widget.CardView
                    android:layout_below="@id/text_11"
                    android:id="@+id/water_tracker_card"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/water_intake_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/baijamjureebold"
                            android:text="2.5L /5L "
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:textSize="30sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:text="Consumed Today"
                            android:fontFamily="@font/baijamjureebold"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ProgressBar
                            android:id="@+id/progress_bar_water"
                            android:layout_below="@+id/water_intake_user"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="0"
                            android:max="100"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/custom_progress_bar"/>



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



            </RelativeLayout>


            <androidx.cardview.widget.CardView

                android:id="@+id/add_water_card"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="@color/neon_green"
                xmlns:card_view="http://schemas.android.com/tools"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                card_view:cardCornerRAdius="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="+ Add Water"
                    android:fontFamily="@font/bal_jamburee_reg"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    >

                </TextView>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>