<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".activities.TrainingActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:text="We Train \nTogether"
            android:fontFamily="@font/bebas_nue_reg"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="italic" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="Daily Challenges"
                    android:fontFamily="@font/bal_jamburee_reg"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


                <androidx.cardview.widget.CardView
                    android:layout_below="@id/text_4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:foreground="#3F000000"
                            android:src="@drawable/d4a710ece6ab2c0ee0f7e9791424dcda"
                            android:foregroundTintMode="src_atop"
                            android:adjustViewBounds="true"
                            >
                        </ImageView>


                        <TextView
                            android:id="@+id/challenge_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:text="You Got \nA Minute \nTo Win It."
                            android:fontFamily="@font/glass"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_below="@id/challenge_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:text="40 Squats to bag the win."
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                        <com.google.android.material.button.MaterialButton
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/khaki"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:text="let's go"
                            android:textColor="@color/black"
                            app:cornerRadius="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            >

                        </com.google.android.material.button.MaterialButton>





                    </RelativeLayout>

                </androidx.cardview.widget.CardView>




            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="Featured Workouts"
                    android:fontFamily="@font/bal_jamburee_light"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp" />



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/text_5"
                    android:id="@+id/recycler_view_workouts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:padding="10dp" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Don't Miss Our \nNewest Content!"
                    android:fontFamily="@font/bebas_nue_reg"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="italic" />


                <androidx.cardview.widget.CardView
                    android:layout_below="@id/text_6"
                    android:id="@+id/blog_1_card"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:foreground="#3F000000"
                            android:src="@drawable/_c156132_e0f8_42a8_895b_17acaa8b5a99"
                            android:foregroundTintMode="src_atop"
                            android:adjustViewBounds="true"
                            >
                        </ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="How To Overcome\nLost Motivation"
                            android:fontFamily="@font/playfair_display"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:text="Read More"
                            android:textStyle="italic"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/black"
                            android:textSize="10sp" />




                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/blog_1_card"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#FFFF" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/blog_2_card"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_below="@+id/blog_1_card"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:foreground="#3F000000"
                            android:src="@drawable/young_man_stretching_himself_on_a_foam_roller_picture_id1182421361_752x401"
                            android:foregroundTintMode="src_atop"
                            android:adjustViewBounds="true"
                            >
                        </ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="How To Speed\nMuscle Recovery"
                            android:fontFamily="@font/playfair_display"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:text="Read More"
                            android:textStyle="italic"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/black"
                            android:textSize="10sp" />



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>