<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".activities.WorkoutTaskActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/workout_name_headintask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:text="WORKOUT NAME"
            android:fontFamily="@font/bebas_nue_reg"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="italic" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <androidx.cardview.widget.CardView
                    android:layout_below="@id/text_4"
                    android:id="@+id/calorie_tracker_card"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/workout_name_intask"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="TRAINING: CHEST"
                            android:fontFamily="@font/bebas_nue_reg"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:textSize="30sp" />


                        <TextView
                            android:layout_below="@id/workout_name_intask"
                            android:id="@+id/workout_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/ic_baseline_access_time_24"
                            android:fontFamily="@font/bal_jamburee_light"
                            android:text=" 90 Mins"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/workout_taskCount_intask"
                            android:layout_below="@id/workout_name_intask"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/workout_time"
                            android:fontFamily="@font/bal_jamburee_light"
                            android:layout_marginLeft="20dp"
                            android:text="Tasks: 90 Mins"
                            android:textColor="@color/black"
                            android:textSize="15sp" />




                    </RelativeLayout>

                </androidx.cardview.widget.CardView>




            </RelativeLayout>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/khaki"
                    xmlns:card_view="http://schemas.android.com/tools"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRAdius="5dp">

                        <TableLayout
                            android:id="@+id/workout_tasks_table"
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="20dp"

                                >


                            </TableRow>

                        </TableLayout>


                </androidx.cardview.widget.CardView>




            </RelativeLayout>






        </LinearLayout>

    </ScrollView>


</LinearLayout>