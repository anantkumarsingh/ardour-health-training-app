<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_dark"
    android:orientation="vertical"
    tools:context=".activities.AddMealTaskActivity">

    <RelativeLayout
        android:id="@+id/home_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Track Your Calories"
            android:fontFamily="@font/bebas_nue_reg"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginBottom="0dp"/>

        <androidx.appcompat.widget.SearchView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_5"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/light_grey">

        </androidx.appcompat.widget.SearchView>




    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_below="@id/text_3"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">



        <View
            android:id="@+id/border_1"
            android:layout_width="1dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:background="#FF816DDF" />

        <View
            android:id="@+id/border_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="20dp"
            android:background="#FF816DDF" />

        <View
            android:id="@+id/border_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="20dp"
            android:background="#FF816DDF" />

        <View
            android:id="@+id/border_2"
            android:layout_width="1dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:background="#FF816DDF" />


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/border_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Total Calories"
            android:fontFamily="@font/bebas_nue_reg"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calorie_count"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/border_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="0 Cal"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/calorie_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Your Daily Goal: 2300 Cal"
            android:fontFamily="@font/bal_jamburee_light"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="80dp"
            android:textStyle="bold" />

    </RelativeLayout>






            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="Common Meals/ Food Items:"
                    android:fontFamily="@font/bebas_nue_reg"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/text_4"
                    android:id="@+id/recycler_food_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:padding="10dp" />



            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/save_calorie_count"
                    android:layout_width="360dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/neon_green"
                    android:layout_alignParentBottom="true"
                    android:text="SAVE"
                    android:fontFamily="@font/bal_jamburee_reg"
                    android:textColor="@color/black"
                    app:cornerRadius="10dp"
                    android:layout_centerHorizontal="true"

                    >

                </com.google.android.material.button.MaterialButton>


            </RelativeLayout>




        </LinearLayout>




    </ScrollView>




</LinearLayout>