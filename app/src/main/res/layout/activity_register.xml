        <EditText
            android:id="@+id/reg_name_box"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="51dp"
            android:backgroundTint="@color/white"
            android:drawablePadding="10dp"
            android:ems="4"
            android:hint="Name"
            android:minHeight="48dp"
            android:textColor="@color/light_white"
            android:textColorHint="@color/light_white" />

        <EditText
            android:id="@+id/reg_email_box"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="430dp"
            android:layout_marginEnd="51dp"
            android:backgroundTint="@color/white"
            android:drawablePadding="10dp"
            android:ems="4"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/light_white"
            android:textColorHint="@color/light_white" />

        <EditText
            android:id="@+id/reg_pwd_box"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="51dp"
            android:backgroundTint="@color/white"
            android:drawablePadding="10dp"
            android:ems="4"
            android:hint="Password"
            android:inputType="textWebPassword"
            android:textColor="@color/light_white"
            android:textColorHint="@color/light_white" />

        <EditText
            android:id="@+id/reg_adr_box"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="570dp"
            android:layout_marginEnd="51dp"
            android:backgroundTint="@color/white"
            android:drawablePadding="10dp"
            android:ems="4"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textColor="@color/light_white"
            android:textColorHint="@color/light_white" />


        <EditText
            android:id="@+id/reg_mobile_box"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="640dp"
            android:layout_marginEnd="51dp"
            android:backgroundTint="@color/white"
            android:drawablePadding="10dp"
            android:ems="4"
            android:hint="Mobile Number"
            android:inputType="number"
            android:textColor="@color/light_white"
            android:textColorHint="@color/light_white" />


        <Button
            android:id="@+id/reg_signup_btn"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="710dp"
            android:layout_marginEnd="127dp"
            android:backgroundTint="@color/neon_green"
            android:text="SIGN UP"
            android:textColor="@color/black"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/log_in_txt_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/reg_signup_btn"
            android:text="@string/have_acc"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginBottom="50dp"
            android:textSize="16dp"
            android:textStyle="bold">

        </TextView>


    </RelativeLayout>
</ScrollView>