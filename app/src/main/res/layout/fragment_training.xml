<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.training.TrainingFragment"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#ff0000"
        >

        <ImageView
            android:id="@+id/training_image_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/_42363482_3479780892252957_586699656346106702_n"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:foreground="#0F000000"
            android:foregroundTintMode="src_atop"
            android:adjustViewBounds="true"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/glass"
            android:text="Training"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="italic"
            app:fontFamily="@font/glass" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#ff0000"
        >
        <ImageView
            android:id="@+id/diet_image_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/_815d0a4_8d76_4aaf_9a92_2eb06ccb80fb"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:foreground="#6F000000"
            android:foregroundTintMode="src_atop"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/glass"
            android:text="Diet"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="italic"
            app:fontFamily="@font/glass" />
    </RelativeLayout>
</LinearLayout>