<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        tools:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/centre_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:foreground="#9F000000"
                android:foregroundTintMode="src_atop"
                android:adjustViewBounds="true"
                >
            </ImageView>


            <TextView
                android:id="@+id/centre_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GYM NAME"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/glass"
                android:textSize="20sp"
                android:layout_marginTop="170dp" />



            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/ic_baseline_location_on_24_white"
                app:shapeAppearanceOverlay="@style/Circular"
                android:layout_alignParentStart="true"
                android:layout_width="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="200dp"
                android:layout_height="20dp"/>


            <TextView
                android:id="@+id/centre_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="200dp"
                android:text="Gym, Area"
                android:textColor="@color/white" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>