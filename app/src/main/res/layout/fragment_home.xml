<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:id="@+id/home_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginStart="70dp"
            android:text="Hello There,"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            >

        </TextView>

        <TextView
            android:id="@+id/name_user_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="45dp"
            android:text="Anant 👋🏻"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <com.google.android.material.imageview.ShapeableImageView
            android:src="@drawable/ic_baseline_account_circle_white_24"
            app:shapeAppearanceOverlay="@style/Circular"
            android:layout_alignParentStart="true"
            android:layout_width="50dp"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_height="50dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:src="@drawable/ic_baseline_notifications_none_24_white"
            app:shapeAppearanceOverlay="@style/Circular"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:padding="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="25dp"
            android:layout_height="50dp"/>


        <androidx.appcompat.widget.SearchView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_user_home"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/light_grey">

        </androidx.appcompat.widget.SearchView>




    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ft_blogcard_home"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                tools:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:foreground="#3F000000"
                        android:src="@drawable/_b0e7fca12e7a6f84a8b300caddffc59"
                        android:foregroundTintMode="src_atop"
                        android:adjustViewBounds="true"
                        >
                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="@string/featured_blog_title"
                        android:fontFamily="@font/playfair_display"
                        android:textStyle="italic"
                        android:textColor="@color/white"
                        android:textSize="30sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="Read More"
                        android:textStyle="italic"
                        android:layout_marginBottom="20dp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"
                        android:textSize="10sp" />





            </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


            <RelativeLayout
                android:id="@+id/card_container_home"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView

                    android:id="@+id/hospitals_card"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    xmlns:card_view="http://schemas.android.com/tools"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRAdius="5dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:foreground="#4F000000"
                        android:src="@drawable/_d53a7a9e7a8d4522c731355c973ae2e"
                        android:foregroundTintMode="src_atop"
                        android:adjustViewBounds="true"
                        >
                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Hospitals"
                        android:fontFamily="@font/baijamjureebold"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        >

                    </TextView>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/appointments_card"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/hospitals_card"
                    xmlns:card_view="http://schemas.android.com/tools"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRAdius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:foreground="#4F000000"
                        android:src="@drawable/_18ffcfc9dd641c2e0dbd2247ff88223"
                        android:foregroundTintMode="src_atop"
                        android:adjustViewBounds="true"
                        >
                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Appointments"
                        android:fontFamily="@font/baijamjureebold"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        >

                    </TextView>


                </androidx.cardview.widget.CardView>





                <androidx.cardview.widget.CardView
                    android:id="@+id/training_centre_card"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/appointments_card"
                    xmlns:card_view="http://schemas.android.com/tools"
                    app:cardCornerRadius="15dp"

                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRAdius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:foreground="#4F000000"
                        android:src="@drawable/c8879780179de40c7dc805fbb9c97046"
                        android:foregroundTintMode="src_atop"
                        android:adjustViewBounds="true"
                        >
                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Training Centres"
                        android:textStyle="bold"
                        android:fontFamily="@font/baijamjureebold"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        >

                    </TextView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/shop_card"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/training_centre_card"
                    xmlns:card_view="http://schemas.android.com/tools"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRAdius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:foreground="#4F000000"
                        android:src="@drawable/pexels_cottonbro_studio_5076516"
                        android:foregroundTintMode="src_atop"
                        android:adjustViewBounds="true"
                        >
                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Shop"
                        android:fontFamily="@font/baijamjureebold"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        >

                    </TextView>


                </androidx.cardview.widget.CardView>



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/notify_user_appt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="Recent Updates On Your Health"
                    android:fontFamily="@font/playfair_display"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/checkup_card"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/checkup_container"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:background="@color/white_purple"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/schedule_checkup_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toLeftOf="@+id/border_1"
                                android:text="It's been over a year since your last checkup"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/schedule_checkup_text"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_toLeftOf="@+id/border_1"
                                android:hint="Check last visit details"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/border_1"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="100dp"
                                android:layout_marginBottom="20dp"
                                android:background="#FF816DDF" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="40dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/ic_notifications_black_24dp"

                                />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FF816DDF"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/border_2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#000000" />

                            <TextView
                                android:id="@+id/schedule_checkup_text_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toLeftOf="@+id/border_3"
                                android:text="Blood Test"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/border_3"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="100dp"
                                android:layout_marginBottom="20dp"
                                android:background="#FFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/schedule_checkup_text_2"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_toLeftOf="@+id/border_3"
                                android:hint="Tap to schedule your visit"
                                android:textColorHint="#FFD5D8E3"
                                android:textSize="14sp" />


                            <TextView
                                android:id="@+id/appointment_date_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="20dp"
                                android:text="2 March"
                                android:textColor="@color/white"
                                android:textSize="14sp" />


                        </RelativeLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/checkup_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/blood_donation_txt"
                    android:fontFamily="@font/playfair_display"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="italic" />


                <TextView
                    android:id="@+id/blog_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="20dp"
                    android:text="Read More About Blood Donation"
                    android:fontFamily="@font/bal_jamburee_reg"
                    android:textColor="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_arrow_outward_24"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/donate_blood_card"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_below="@+id/blog_txt"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:foreground="#3F000000"
                            android:src="@drawable/_edf50fe_b036_45ee_b904_78cce352cd8d"
                            android:foregroundTintMode="src_atop"
                            android:adjustViewBounds="true"
                            >
                        </ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Donate Blood"
                            android:fontFamily="@font/playfair_display"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="italic" />



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/donate_blood_card"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#FFFF" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/search_donor_card"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_below="@+id/donate_blood_card"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    tools:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:foreground="#3F000000"
                            android:src="@drawable/a5d985d1ac2bdcf910701b65e24e2345"
                            android:foregroundTintMode="src_atop"
                            android:adjustViewBounds="true"
                            >
                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Search For Donors"
                            android:fontFamily="@font/playfair_display"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="italic" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>